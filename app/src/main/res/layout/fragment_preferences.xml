<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/temperatureImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/temperature" />

        <TextView
            android:id="@+id/tempText"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/temperatureImage"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="31dp"
            android:text="Temperature"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tempEditText"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/tempText"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="10dp"
            android:hint="18"
            android:inputType="number" />

        <Button
            android:id="@+id/button"
            android:layout_width="81dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/tempEditText"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="16dp"
            android:text="Apply"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/suggestionTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tempText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="70dp"
            android:textColor="#4CAF50"
            android:text="Suggested temperature is 18 grade"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginEnd="10dp"
android:layout_marginStart="10dp"
android:layout_marginTop="10dp">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
