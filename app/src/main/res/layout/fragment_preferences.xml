<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/prefrencesSpinner"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:padding="8dp">




            <ImageView
                android:id="@+id/temperatureImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/temperature" />

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/temperatureImage"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="31dp"
                android:text="Temperature"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minTempEditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="295dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/MaxTempEditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="174dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:padding="8dp">


            <ImageView
                android:id="@+id/humImage"
                android:layout_width="44dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/humidity" />

            <TextView
                android:id="@+id/humText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/humImage"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="31dp"
                android:text="Humidity"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minHumEditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="295dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/MaxHumEditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="174dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:padding="8dp">



            <ImageView
                android:id="@+id/co2Image"
                android:layout_width="53dp"
                android:layout_height="67dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="2dp"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/co2" />

            <TextView
                android:id="@+id/co2Text"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/co2Image"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="31dp"
                android:text="CO2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minCo2EditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="295dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />


            <EditText
                android:id="@+id/MaxCo2EditText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="174dp"
                android:layout_marginBottom="33dp"
                android:inputType="number"
                android:textSize="14dp" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Save"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>

